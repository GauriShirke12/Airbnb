<% layout("/layouts/boilerplate") %>

    <div class="row">
        <div class="col-8 offset-2 md-3 mt-5">
            <h3 class="offset-2"><%= listing.title %></h3>

        </div><br><br><br><br>
        <div class="card col-6 offset-3 show-card listing-card">

            <img src="<%= (listing.image && listing.image.url) ? listing.image.url : '/css/placeholder.png' %>" class="card-img-top show-img " alt="listing_image">
            <div class="card-body">
                <p class="card-text offset-1">
                   
                    <%= listing.description %><br>
                        $<%= (typeof listing.price === 'number' ? listing.price.toLocaleString("en-IN") : 'N/A') %><br>
                            <%= listing.location %><br>
                                <%= listing.country %><br>
                </p>
            </div>
        </div>
        <br>

    </div>
<div class="btns">
    <a href="/listings/<%= listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>



    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark offset-5">Delete</button>
    </form>
</div>
<hr>
<div class="col-8 offset-3 mb-3">
    <h4>Leave a Review</h4>
    <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
        <div class="mb-3 mt-3">
            <label for="rating" class="for-label" >Rating</label>
            <input type="range" name="review[rating]" id="rating" min="1" max="5">
        </div>
        <div class="mb-3 mt-3">
            <label for="comment" class="form-label" >Comment</label>
            <textarea name="review[comment]" id="comment" cols="20" rows="5" class="form-control" required ></textarea>
            <div class="invalid-feedback">Please provide a valid comment.</div>
        </div>
        <button type="submit" class="btn btn-outline-dark">Submit Review</button>
    </form>
<hr>
<p><b>All reviews</b></p>
 <div class="row">
<% if (listing.reviews && listing.reviews.length) { %>
    <% listing.reviews.forEach(function(review) { %>
        <div class="card mb-3 col-5 ms-3">
            <div class="card-body">
                <h5 class="card-title">Jone Doe</h5>
                <p class="card-text"><%= review.comment %></p><br>
                <p class="card-text"><%= review.rating %>star</p>
            </div>
            <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                <button class="btn btn-dark">Delete</button>
            </form>
        </div>
    <% }) %>
<% } else { %>
    <p>No reviews yet</p>
<% } %>
</div>
</div>
</div>
<script src="/js/script.js"></script>
